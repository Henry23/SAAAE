<div class="form-group">
  <%= label_tag "Seaching for"%>
  <%= form_tag home_path, method: "get" do %>
    <div class="col-lg-8">
      <%= text_field_tag :search, params[:search], :class => 'form-control', :placeholder => 'student id card' %>
    </div>
    <%= submit_tag "Search", :class => 'btn btn-primary'%>
    <% end %>
</div>


<% @student.each do |stud| %>
  <p> <%= stud.name %></p>
<% end %>

