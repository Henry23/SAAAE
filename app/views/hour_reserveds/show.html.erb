<%- model_class = HourReserved -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:hourdate_reserved_id) %>:</strong></dt>
  <dd><%= @hour_reserved.hourdate_reserved_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reservation_id) %>:</strong></dt>
  <dd><%= @hour_reserved.reservation_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              hour_reserveds_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_hour_reserved_path(@hour_reserved), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              hour_reserved_path(@hour_reserved),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
