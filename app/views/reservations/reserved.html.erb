<%- model_class = StudyCarrel -%>

<div class="page-header">
  <h1>Tabla de Horas</h1>
</div>

<dl class="dl-horizontal">

<dl class="dl-horizontal">
  <table class="table table-striped">
  <thead>
    <tr>
      <th> Hora Disponible </th>
      <th> choose </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @carrels.hourdate_reserved.each do |t| %>
      <td>  
        <% if t.enable %>
        <%= check_box("puppy", "commands", {:multiple => true}, "sit", nil) %>

        <dd> <%= t.hora.strftime("%I") + ":" + t.hora.strftime("%M") + " "+ t.hora.strftime("%p") %>
        </dd>
        <% elsif %>
          <p> en rojo </p>
        <% end %>
      </td>
      <td>
        <%= link_to "Escojer", "/path1",:class => 'btn btn-default btn-xs' %>
      </td>
    </tr>
    
    <% end %>
  </tbody>
</table>

<%= link_to 'Reservar', "/path", :class => 'btn btn-primary' %>
