<%= form_for @hourdate_reserved, :html => { :class => "form-horizontal hourdate_reserved" } do |f| %>

  <% if @hourdate_reserved.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@hourdate_reserved.errors.count, "error") %> prohibited this hourdate_reserved from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @hourdate_reserved.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :hora, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :hora, :class => 'form-control' %>
    </div>
    <%=f.error_span(:hora) %>
  </div>
  <div class="form-group">
    <%= f.label :fecha, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :fecha, :class => 'form-control' %>
    </div>
    <%=f.error_span(:fecha) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                hourdate_reserveds_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
